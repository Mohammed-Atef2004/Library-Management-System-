@{
    ViewData["Title"] = "Home Page";
}

<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .hero-section {
        min-height: 100vh;
        background: linear-gradient(135deg, #f3f4f6, #e0e7ff);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero-card {
        background-color: white;
        border-radius: 1.5rem;
        padding: 3rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .hero-buttons .btn {
        width: 150px;
        margin: 10px;
        border-radius: 30px;
    }
</style>

<div class="hero-section">
    <div class="hero-card">
        <h1 class="display-4 mb-3 text-primary fw-bold">Welcome to Library Management System</h1>
        <p class="lead mb-4">Manage users, books, and roles with ease using our ASP.NET Core web app.</p>
        <div class="hero-buttons d-flex justify-content-center flex-wrap">
            <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register">Register</a>
            <a class="btn btn-outline-primary btn-lg" asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </div>
</div>
