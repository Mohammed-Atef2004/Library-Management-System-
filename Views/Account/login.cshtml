@model Library_Management_System.Models.User
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="bg-dark p-5 rounded-4 shadow-lg" style="width: 100%; max-width: 450px;">
        <h3 class="text-center text-info mb-4"><i class="bi bi-lock-fill me-2"></i>Login</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Username" class="form-control" placeholder="Enter username" />
                </div>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" type="password" class="form-control" id="passwordField" placeholder="Enter password" />
                    <button class="btn btn-outline-light" type="button" onclick="togglePassword()" tabindex="-1">
                        <i class="bi bi-eye-fill"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-info btn-lg text-white">Login</button>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
            {
                <div class="mt-3 text-danger text-center fw-semibold">
                    @ViewBag.Message
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const input = document.getElementById("passwordField");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}
